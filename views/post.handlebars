<body>
  <div id='add-post-container' style='margin-top: 15px; margin-bottom:15px;'>
    <h2>Create Review Post</h2>
    {{#each errors}}
    <div class='error'>
      <p>{{text}}</p>
    </div>
    {{/each}}
    
    
    <form action="/api/posts" method="POST" class="add-form">

      {{!-- <option name='location' id='location'>{{name}}</option>
    <option name='busId' id='busId'>{{id}}</option> --}}
      <div>
        <label>Which business?</label>
      </div>
      <select name ='location' class="form-select" id="location">
        <option value=null>---Choose Option----</option>
       {{#each businesses as |business|}}

        <option name='location'>{{name}}</option>
      {{/each}}
      </select>

      <div>
        <label>Stars?</label>
      </div>
      <select name='stars' class="form-select" id="stars">
        <option value=null>---Choose Option----</option>
        <option>5</option>
        <option>4</option>
        <option>3</option>
        <option>2</option>
        <option>1</option>
        <option>0</option>
      </select>

      <div>
        <label>Is this location crowded?</label>
      </div>
      <select name='crowded' class="form-select" id="crowded">
        <option value=null>---Choose Option----</option>
        <option>Crowded</option>
        <option>Not Crowded</option>
      </select>

      <hr style='width:150px; background-color:#545F66 border: none;'>

      <div>
        <label>Are people wearing masks?</label>
      </div>
      <select name='masks' id='masks' class="form-select multiple" aria-label="Are people wearing masks?">
        <option value=null>---Choose Option----</option>
        <option>Masks</option>
        <option>No Masks</option>
      </select>
      <hr style='width:150px; background-color:#545F66 border: none;'>
      <div>
        <label>Is there live entertainment?</label>
      </div>
      <select name='entertainment' id='entertainment' class="form-select multiple" aria-label="Is there live entertainment?">
        <option value=null>---Choose Option----</option>
        <option>Yes</option>
        <option>No</option>
      </select>
      <hr style='width:150px; background-color:#545F66 border: none;'>
      <div>
        <label>Are there food and drink specials?</label>
      </div>
      <select name='specials' id='specials' class="form-select multiple" aria-label="Are there food and drink specials?">
        <option value=null>---Choose Option----</option>
        <option>Yes</option>
        <option>No</option>
      </select>
      <hr style='width:150px; background-color:#545F66 border: none;'>
      <div>
        <label>Are the restrooms clean?</label>
      </div>
      <select name="quality" id='quality' class="form-select multiple" aria-label="Are the restrooms clean?">
        <option value=null>---Choose Option----</option>
        <option value="Restrooms are sparkling clean">Yes</option>
        <option value='Restrooms are moderately clean'>Moderately</option>
        <option value="Restrooms are not the cleanest'">No</option>
      </select>

      <br></br>

      <div class="form-floating">
        <textarea name="addComment" id='comments' class="form-control" placeholder="Comments"
          style="width: 95%; height: 75px; margin:auto; border-radius: 10px;">{{addComment}}</textarea>
        <label for="floatingTextarea"></label>
        <div class="add-post">
          <button type="submit" class="btn btn-primary btn-lg" style="background-color: #FFBE86;
  border: none;
  padding: 8px 36px;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 14px;
  margin: 4px 2px;
  cursor: pointer;
  border-radius: 5px;">Make a Post</button>
        </div>
      </div>
    </form>
  </div>
</body>
