<div class="row">
  <div id='login' class="col-md-6">
    <h2>Login</h2>
    <form class="form login-form">
      <div class="form-group">
        <label for="email-login">Email:</label>
        <input class="form-input" type="text" id="email-login" />
      </div>
      <div class="form-group">
        <label for="password-login">Password:</label>
        <input class="form-input" type="password" id="password-login" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Login</button>
      </div>
    </form>
  </div>
  <div id='signup' class="col-md-6">
    <h2>Signup</h2>
    {{#each errors}}
    <div class='error'>
      <p>{{text}}</p>
    </div>
    {{/each}}
    <form action='/api/users' method='POST' class="form signup-form">
      <div class="form-group">
        <label for="username-signup">User Name:</label>
        <input class="form-input" placeholder="jsmith232"  type="text" id="username" value={{username}}>
      </div>
      <div class="form-group">
        <label for="first-name-signup">First Name</label>
        <input class="form-input" placeholder="John"  type="text" id="first_name" value={{first_name}}>
      </div>
      <div class="form-group">
        <label for="last-name-signup">Last Name</label>
        <input class="form-input" placeholder="Smith"  type="text" id="last_name" value={{last_name}}>
      </div>
      <div class="form-group">
        <label for="email-signup">Email:</label>
        <input class="form-input" placeholder="smith.john@email.com"  type="email" id="email" value={{email}}>
      </div>
      <div class="form-group">
        <label for="password-signup">Password</label>
        <input class="form-input" type="password" id="pw" />
      </div>
      <div class="form-group">
        <button type="submit" class="btn" >Sign Up</button>
      </div>
    </form>
  </div>
</div>
